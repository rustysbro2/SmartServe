<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <title>Server Details</title>
  <link rel="stylesheet" href="/css/server-details.css">
</head>
<body>
  <header>
    <nav>
      <ul>
        <li>
          <div class="user-profile">
            <img src="/images/profile-picture.jpg" alt="User Profile Picture">
            <div class="dropdown-menu">
              <ul>
                <li><a href="/dashboard">Dashboard</a></li>
                <li><a href="/profile">Profile</a></li>
                <li><a href="/logout">Logout</a></li>
              </ul>
            </div>
          </div>
        </li>
      </ul>
    </nav>
  </header>

  <div class="banner">
    <h1><%= server.name %></h1>
  </div>

  <div class="sidebar">
    <div class="category-menu">
      <ul class="category-items">
        <li class="category-item">Category 1</li>
        <li class="category-item">Category 2</li>
        <li class="category-item">Category 3</li>
      </ul>
    </div>
  </div>

  <div class="content">
    <main>
      <section>
        <p><%= server.description %></p>
      </section>
    </main>

    <footer>
      <p>&copy; 2023 Your Website. All rights reserved.</p>
    </footer>
  </div>
</body>
</html>
